@{
    Layout = "~/Views/Shared/_LayoutHF.cshtml";
    ViewBag.Title = "Easy Living | Real Estate Website";
}

@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">
    $(document).ready(function () {
        $("input[type=submit]").attr('disabled', 'disabled');
        $("#Email_Address").focusout(function () {
            var s = $("#Email_Address").val();
            $.getJSON("/User/check_uName?name=" + s, function (d) {
                if (d) {
                    $('#errMsg').text("Email Address Already Exist");
                } else {
                    $('#errMsg').text("");
                    $('#submitBtn').removeAttr('disabled');
                }
            });
        });
        $("#Email_Address").focusin(function () {
            $('#errMsg').text("");
            $("#submitBtn").prop('disabled', true);
        });
    });
</script>

<div class="row">
    <img src="~/Images/register_form.png" style="width:100%;" />
</div>
<br />
<br />
<div class="container">
    <div class="row">
        <div class="col-lg-4 col-lg-offset-4">
            <h3>Register</h3>
            <div class="divider"></div>
            <p style="font-size:13px;">Already Have an Account? <a href="/User/Login">Login here!</a></p>
            <!-- start login form -->
            <div class="filterContent sidebarWidget">
                <form method="post" action="/User/singUp">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <p id="errMsg"></p>
                            <div class="formBlock">
                                <label for="email">First Name</label><br>
                                <input name="First_Name" class="form-control" id="First_Name" type="text">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="formBlock">
                                <label for="email">Last Name</label><br>
                                <input name="Last_Nme" class="form-control" id="Last_Nme" type="text">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="formBlock">
                                <label for="email">Email</label><br>
                                <input name="Email_Address" class="form-control" id="Email_Address" type="text">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="formBlock">
                                <label for="pass">Password</label><br>
                                <input name="Password" class="form-control" id="pass" type="password">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="formBlock">
                                <label for="confirmPass">Confirm Password</label><br>
                                <input name="Confirm_Password" class="form-control" id="confirmPass" type="password">
                            </div>
                        </div>
                        <div class="col-lg-12 col-md-12 col-sm-6">
                            <div class="formBlock">
                                <input id="submitBtn" class="buttonColor" value="REGISTER" style="margin-top:24px;" type="submit" >
                            </div>
                        </div>
                        <div style="clear:both;"></div>
                    </div><!-- end row -->
                </form>
                <!-- end form -->
            </div><!-- end login form -->
        </div><!-- end col -->

    </div>
</div>
