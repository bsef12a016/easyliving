@{
    Layout = "~/Views/Shared/_LayoutHF.cshtml";
}

<div class="row">
    <img src="~/Images/submit_property.png" style="width:100%;" />
</div>
<br />
<br />
<section class="properties">
    <div class="container">
        <form action="/Property/AddingProperty" method="post" enctype="multipart/form-data">
            <div class="row">
                <!-- start property info -->
                <div class="col-lg-4 col-md-4">
                    <h3>PROPERTY INFO</h3>
                    <div class="divider"></div>
                    <div class="sidebarWidget submission">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label for="price">Price ($)</label><br>
                                    <input name="Price" id="price" type="text">
                                </div>
                            </div>

                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label for="address">Address</label><br>
                                    <input name="Address" id="address" type="text">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label for="city">City</label><br>
                                    <input name="City" id="city" type="text">
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label for="Area">Area</label><br>
                                    <input name="Area" id="Area" type="text">
                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div><!-- end row -->
                    </div>
                </div>
                <!-- end property info -->
                <!-- start amenities -->
                <div class="col-lg-4 col-md-4">
                    <h3>AMENITIES</h3>
                    <div class="divider"></div>
                    <div class="sidebarWidget submission">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="amenityCheckList formBlock">
                                    <label>Amenities</label><br><br>
                                    <div class="row">
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="1" type="checkbox" name="Air_Conditioning"><label for="1">Air Conditioning</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="2" type="checkbox" name="Balcony"><label for="2">Balcony</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="3" type="checkbox" name="Cable_TV"><label for="3">Cable TV</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="4" type="checkbox" name="Heating"><label for="4">Heating</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="5" type="checkbox" name="Internet"><label for="5">Internet</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="6" type="checkbox" name="Pool"><label for="6">Pool</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="7" type="checkbox" name="Garage"><label for="7">Garage</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="8" type="checkbox" name="Garden"><label for="8">Garden</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="9" type="checkbox" name="Bedrooms"><label for="9">BedRooms</label></div>
                                        <div style="clear:both;"></div>
                                        <div class="amenityCheck col-lg-6 col-md-12"><input id="10" type="checkbox" name="Bathrooms"><label for="10">Bath Rooms</label></div>
                                        <div style="clear:both;"></div>
                                    </div>
                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div><!-- end row -->
                    </div>
                </div>
                <!-- end amenities -->
                <!-- start additional info -->
                <div class="col-lg-4 col-md-4">
                    <h3>ADDITIONAL INFO</h3>
                    <div class="divider"></div>
                    <div class="sidebarWidget submission">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label for="propertyType">Property Type</label><br>
                                    <select name="Property_Type" id="propertyType" class="formDropdown">
                                        <option value="Family House">Family House</option>
                                        <option value="Single House">Single House</option>
                                        <option value="Apartment">Apartment</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-6">
                                <div class="formBlock">
                                    <label>Photos</label><br>
                                    <input type="file" name="pic1">
                                    <input type="file" name="pic2">
                                    <input type="file" name="pic3">
                                    <input type="file" name="pic4">
                                </div>
                            </div>
                            <div style="clear:both;"></div>
                        </div><!-- end row -->
                    </div>
                </div>
                <!-- end additional info -->
                <div class="col-lg-4 col-lg-offset-4 col-md-4">
                    <div class="formBlock">
                        <input class="buttonColor" value="SUBMIT PROPERTY" type="submit">
                    </div>
                </div>

            </div><!-- end row -->
        </form>
    </div><!-- end container -->
</section>
